{
  "Comment": "Generate Segments",
  "StartAt": "DefaultValues",
  "States": {
    "DefaultValues": {
      "Type": "Pass",
      "Parameters": {
        "data.$": "$.data",
        "defaults": {
          "schema": "Turkey_BLU",
          "suffix": "bua-sql",
          "update_id": "12",
          "rdssecret": "cicd/{{prefix}}/rds/bua"
        }
      },
      "Next": "MergeData"
    },
    "MergeData": {
      "Type": "Pass",
      "Parameters": {
        "data.$": "States.JsonMerge($.defaults, $.data, false)"
      },
      "Next": "GenerateSegments"
    },
    "GenerateSegments": {
      "Type": "Pass",
      "Parameters": {
        "type": "step",
        "name": "BUA Segments",
        "next": "000_get_parameters",
        "speed": "fast",
        "retry_delay": 120,
        "data.$": "$.data",
        "steps": {
          "000_get_parameters": {
            "action": "get_parameters",
            "args": {
              "names": [
                "domain"
              ]
            },
            "on": {
              "COMPLETE": {
                "next": "100_clear_error_queues"
              }
            }
          },
          "100_clear_error_queues": {
            "action": "empty_site_errors_queues",
            "on": {
              "COMPLETE": {
                "delay": 60,
                "next": "105_utility_profiles"
              }
            }
          },
          "105_utility_profiles": {
            "action": "bua_initiate",
            "args": {
              "run_type": "Utility"
            },
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "110_wait_for_utility_profiles"
              }
            }
          },
          "110_wait_for_utility_profiles": {
            "action": "wait_for_empty_site_queues",
            "retry_delay": 120,
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "115_clear_error_queues"
              }
            }
          },
          "115_clear_error_queues": {
            "action": "empty_site_errors_queues",
            "on": {
              "COMPLETE": {
                "delay": 60,
                "next": "120_jurisdiction_segments"
              }
            }
          },
          "120_jurisdiction_segments": {
            "action": "bua_initiate",
            "args": {
              "run_type": "SegmentJurisdiction",
              "identifier_type": "SegmentJurisdictionAvgExclEst"
            },
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "125_wait_for_jurisdiction_segments"
              }
            }
          },
          "125_wait_for_jurisdiction_segments": {
            "action": "wait_for_empty_site_queues",
            "retry_delay": 120,
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "130_clear_error_queues"
              }
            }
          },
          "130_clear_error_queues": {
            "action": "empty_site_errors_queues",
            "on": {
              "COMPLETE": {
                "delay": 60,
                "next": "135_segment_jurisdiction_check"
              }
            }
          },
          "135_segment_jurisdiction_check": {
            "action": "bua_initiate",
            "args": {
              "run_type": "SegmentJurisdictionCheck",
              "identifier_type": "SegmentJurisdictionAvgExclEst"
            },
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "140_wait_for_segment_jurisdiction_check"
              }
            }
          },
          "140_wait_for_segment_jurisdiction_check": {
            "action": "wait_for_empty_site_queues",
            "retry_delay": 120,
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "145_clear_error_queues"
              }
            }
          },
          "145_clear_error_queues": {
            "action": "empty_site_errors_queues",
            "on": {
              "COMPLETE": {
                "delay": 60,
                "next": "150_segment_jurisdiction_fix"
              }
            }
          },
          "150_segment_jurisdiction_fix": {
            "action": "bua_initiate",
            "args": {
              "run_type": "SegmentJurisdictionFix",
              "identifier_type": "SegmentJurisdictionAvgExclEst"
            },
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "155_wait_for_segment_jurisdiction_fix"
              }
            }
          },
          "155_wait_for_segment_jurisdiction_fix": {
            "action": "wait_for_empty_site_queues",
            "retry_delay": 120,
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "160_clear_error_queues"
              }
            }
          },
          "160_clear_error_queues": {
            "action": "empty_site_errors_queues",
            "on": {
              "COMPLETE": {
                "delay": 60,
                "next": "165_profile_validation"
              }
            }
          },
          "165_profile_validation": {
            "action": "bua_initiate",
            "args": {
              "run_type": "Validate"
            },
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "170_wait_for_profile_validation"
              }
            }
          },
          "170_wait_for_profile_validation": {
            "action": "wait_for_empty_site_queues",
            "retry_delay": 120,
            "on": {
              "COMPLETE": {
                "next": "180_create_macro_profile_scalar"
              }
            }
          },
          "175_resolve_variances": {
            "comment": "bua_resolve_variances",
            "on": {
              "COMPLETE": {
                "delay": 120
              }
            }
          },
          "180_create_macro_profile_scalar": {
            "action": "bua_create_macro_profile",
            "args": {
              "identifier_type": "SegmentJurisdictionAvgExclEst",
              "stream_types": ["CONTROL", "PRIMARY", "SOLAR", "UNKNOWN", "GAS"]
            },
            "on": {
              "COMPLETE": {}
            }
          }
        }
      },
      "Next": "NextTransition"
    },
    "FastController": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${FastControllerFunction}",
        "Payload.$": "$"
      },
      "OutputPath": "$.Payload",
      "TimeoutSeconds": 180,
      "Next": "WhatNext"
    },
    "SlowController": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${SlowControllerFunction}",
        "Payload.$": "$"
      },
      "OutputPath": "$.Payload",
      "TimeoutSeconds": 900,
      "Next": "WhatNext"
    },
    "WhatNext": {
      "Type": "Choice",
      "Choices": [
        {
          "And": [
            {
              "Variable": "$.next",
              "StringEquals": ""
            },
            {
              "Variable": "$.result.status",
              "StringEquals": "COMPLETE"
            }
          ],
          "Next": "ExecutionDone"
        },
        {
          "Variable": "$.next",
          "StringEquals": "",
          "Next": "ExecutionFailed"
        },
        {
          "Variable": "$.delay",
          "NumericGreaterThan": 0,
          "Next": "WaitForNext"
        }
      ],
      "Default": "NextTransition"
    },
    "ExecutionDone": {
      "Type": "Succeed"
    },
    "ExecutionFailed": {
      "Type": "Fail",
      "Cause": "Step not COMPLETE"
    },
    "WaitForNext": {
      "Type": "Wait",
      "SecondsPath": "$.delay",
      "Next": "NextTransition"
    },
    "NextTransition": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.speed",
          "StringEquals": "slow",
          "Next": "NextTransitionSlow"
        }
      ],
      "Default": "NextTransitionFast"
    },
    "NextTransitionSlow": {
      "Type": "Pass",
      "Parameters": {
        "type.$": "$.type",
        "name.$": "$.name",
        "this.$": "$.next",
        "data.$": "$.data",
        "steps.$": "$.steps"
      },
      "Next": "SlowController"
    },
    "NextTransitionFast": {
      "Type": "Pass",
      "Parameters": {
        "type.$": "$.type",
        "name.$": "$.name",
        "this.$": "$.next",
        "data.$": "$.data",
        "steps.$": "$.steps"
      },
      "Next": "FastController"
    }
  }
}
