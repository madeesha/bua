{
  "Comment": "Export",
  "StartAt": "Export",
  "States": {
    "Export": {
      "Type": "Pass",
      "Parameters": {
        "type": "step",
        "name": "Export",
        "next": "000_get_parameters",
        "speed": "fast",
        "retry_delay": 120,
        "data.$": "$.data",
        "steps": {
          "000_get_parameters": {
            "action": "get_parameters",
            "args": {
              "names": [
                "domain",
                "rdssecret",
                "update_id",
                "suffix",
                "schema",
                "run_date",
                "source_date",
                "today",
                "start_inclusive",
                "end_inclusive",
                "end_exclusive",
                "adh_bucket_name"
              ]
            },
            "on": {
              "COMPLETE": {
                "next": "090_remove_exported_objects"
              }
            }
          },
          "090_remove_exported_objects": {
            "action": "remove_s3_objects",
            "speed": "slow",
            "args": {
              "bucket_name": "{{prefix}}-s3-bua",
              "bucket_prefix": "export/csv/{{run_date|short}}/"
            },
            "on": {
              "COMPLETE": {
                "next": "200_clear_error_queues"
              }
            }
          },
          "200_clear_error_queues": {
            "action": "record_site_errors_queues",
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "210_export_tables_csv"
              }
            }
          },
          "210_export_tables_csv": {
            "action": "bua_initiate",
            "args": {
              "run_type": "ExportTables",
              "table_names": ["BUAAccountSummary", "InvoiceLineItemMonthly"],
              "file_format": "csv",
              "bucket_name": "{{prefix}}-s3-bua",
              "bucket_prefix": "export/csv/{{run_date|short}}/",
              "index_col": "id"
            },
            "on": {
              "COMPLETE": {
                "delay": 120,
                "next": "220_wait_for_export_tables"
              }
            }
          },
          "220_wait_for_export_tables": {
            "action": "wait_for_empty_site_queues",
            "retry_delay": 120,
            "on": {
              "COMPLETE": {
                "next": "230_copy_s3_objects"
              }
            }
          },
          "230_copy_s3_objects": {
            "action": "copy_s3_objects",
            "speed": "slow",
            "args": {
              "source_bucket": "{{prefix}}-s3-bua",
              "source_prefix": "export/csv/{{run_date|short}}/",
              "target_bucket": "{{adh_bucket_name}}",
              "target_prefix": "ADH/OUTBOUND/BUA/",
              "sse": "aws:kms",
              "kms_key_id": "alias/{{prefix}}-bua-shared-key"
            },
            "on": {
              "COMPLETE": {}
            }
          }
        }
      },
      "Next": "NextTransition"
    },
    "FastController": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${FastControllerFunction}",
        "Payload.$": "$"
      },
      "OutputPath": "$.Payload",
      "TimeoutSeconds": 180,
      "Next": "WhatNext"
    },
    "SlowController": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "${SlowControllerFunction}",
        "Payload.$": "$"
      },
      "OutputPath": "$.Payload",
      "TimeoutSeconds": 900,
      "Next": "WhatNext"
    },
    "WhatNext": {
      "Type": "Choice",
      "Choices": [
        {
          "And": [
            {
              "Variable": "$.next",
              "StringEquals": ""
            },
            {
              "Variable": "$.result.status",
              "StringEquals": "COMPLETE"
            }
          ],
          "Next": "ExecutionDone"
        },
        {
          "Variable": "$.next",
          "StringEquals": "",
          "Next": "ExecutionFailed"
        },
        {
          "Variable": "$.delay",
          "NumericGreaterThan": 0,
          "Next": "WaitForNext"
        }
      ],
      "Default": "NextTransition"
    },
    "ExecutionDone": {
      "Type": "Succeed"
    },
    "ExecutionFailed": {
      "Type": "Fail",
      "Cause": "Step not COMPLETE"
    },
    "WaitForNext": {
      "Type": "Wait",
      "SecondsPath": "$.delay",
      "Next": "NextTransition"
    },
    "NextTransition": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.speed",
          "StringEquals": "slow",
          "Next": "NextTransitionSlow"
        }
      ],
      "Default": "NextTransitionFast"
    },
    "NextTransitionSlow": {
      "Type": "Pass",
      "Parameters": {
        "type.$": "$.type",
        "name.$": "$.name",
        "this.$": "$.next",
        "data.$": "$.data",
        "steps.$": "$.steps"
      },
      "Next": "SlowController"
    },
    "NextTransitionFast": {
      "Type": "Pass",
      "Parameters": {
        "type.$": "$.type",
        "name.$": "$.name",
        "this.$": "$.next",
        "data.$": "$.data",
        "steps.$": "$.steps"
      },
      "Next": "FastController"
    }
  }
}
