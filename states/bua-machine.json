      "Next": "IsAnotherStep"
    },
    "IsAnotherStep": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.context.steps_left",
          "NumericGreaterThan": 0,
          "Next": "TakeAStep"
        }
      ],
      "Default": "ExecutionDone"
    },
    "TakeAStep": {
      "Type": "Pass",
      "Parameters": {
        "Output.$": "$",
        "Context.$": {
          "context": {
            "stepfunction.$": "$.context.stepfunction",
            "steps.$": "$.context.steps[1:]",
            "steps_left.$": "States.MathAdd($.context.steps_left, -1)",
            "start.$": "States.ArrayGetItem($.context.steps, 1)"
          }
        }
      },
      "ResultSelector": {
        "Output.$": "States.JsonMerge($.Output, $.Context, false)"
      },
      "OutputPath": "$.Output",
      "Next": "WhatToStart"
    },
    "ExecutionDone": {
      "Type": "Succeed"
    }
  }
}
