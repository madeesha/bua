#!/bin/bash
set -feuo pipefail
export MYSQL_PWD="${DB_PASS}"
for file in `ls "${HOME}/git/uss/turkey/conf/Procedures" | grep R__bua`
do
  echo "Loading ${file}"
  cat "${HOME}/git/uss/turkey/conf/Procedures/${file}" | mysql --host="${DB_HOST}" --port="${DB_PORT}" --user="${DB_USER}" Turkey_BLU
  echo "Loaded ${file}"
done
for file in `ls "${HOME}/git/uss/turkey/conf/Procedures" | grep R__core`
do
  echo "Loading ${file}"
  cat "${HOME}/git/uss/turkey/conf/Procedures/${file}" | mysql --host="${DB_HOST}" --port="${DB_PORT}" --user="${DB_USER}" Turkey_BLU
  echo "Loaded ${file}"
done
