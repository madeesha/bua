#!/bin/bash
# Execute bua process step
set -feuo pipefail

print_syntax() {
  echo ""
  echo "execute-bua-step --run-date <run-date> --snapshot-arn <snapshot-arn> Restore"
  echo "execute-bua-step --run-date <run-date> ScaleUpWorkflow"
  echo "execute-bua-step --run-date <run-date> Warming"
  echo "execute-bua-step --run-date <run-date> UtilityProfiles"
  echo "execute-bua-step --run-date <run-date> Segments"
  echo "execute-bua-step --run-date <run-date> Microscalar"
  echo "execute-bua-step --run-date <run-date> ResetBasicReads"
  echo "execute-bua-step --run-date <run-date> BasicReads"
  echo "execute-bua-step --run-date <run-date> ScaleUpMeterdata"
  echo "execute-bua-step --run-date <run-date> RestartMeterdata"
  echo "execute-bua-step --run-date <run-date> ResetNEM12"
  echo "execute-bua-step --run-date <run-date> GenerateNEM12"
  echo "execute-bua-step --run-date <run-date> InvoiceRuns"
  echo "execute-bua-step --run-date <run-date> ScaleDown"
  echo "execute-bua-step --run-date <run-date> Export"
  echo "execute-bua-step --run-date <run-date> Weekly"
  echo ""
  echo "run-date format YYYY-MM-DD"
  echo ""
  exit 1
}

check_inputs() {
  echo ""
  echo "==========================="
  echo "Execute a BUA step function"
  echo "==========================="
  echo ""
  echo "Checking arguments $@"
  echo ""
  if [[ $# -eq 0 ]] ; then
    print_syntax
  fi
  run_date=""
  snapshot_arn=""
  while [[ $# -ge 2 ]] ; do
    case "${1#--}" in
      run-date)
        run_date="${2}"
        ;;
      snapshot-arn)
        snapshot_arn="${2}"
        ;;
      *)
        print_syntax
        ;;
    esac
    shift
    shift
  done
  if [[ -z "${run_date}" ]] ; then
    echo "INVALID ARGUMENTS, MISSING run-date"
    echo ""
    print_syntax
  fi
  if [[ "${run_date}" =~ ^[0-9]{4}-[0-9]{2}-[0-9]{2}$ ]] ; then
    echo "Valid run date ${run_date}"
  else
    echo "INVALID RUN DATE FORMAT FOR ${run_date}"
    echo ""
    print_syntax
  fi
  for step in "$@" ; do
    if [[ "${step}" == "Restore" ]] ; then
      if [[ -z "${snapshot_arn}" ]] ; then
        echo "INVALID ARGUMENTS FOR Restore, MISSING shapshot-arn"
        echo ""
        print_syntax
      fi
    fi
    ok=0
    for cmd in Restore ScaleUpWorkflow Warming UtilityProfiles Segments Microscalar ResetBasicReads BasicReads ScaleUpMeterdata RestartMeterdata ResetNEM12 GenerateNEM12 InvoiceRuns ScaleDown Export Weekly
    do
      if [[ "${cmd}" == "${step}" ]] ; then
        ok=1
        break
      fi
    done
    if [[ "${ok}" -eq 1 ]] ; then
      echo "Valid step ${step}"
    else
      echo "INVALID STEP NAME ${step}"
      echo ""
      print_syntax
    fi
  done
}

check_inputs "$@"

run_date=""
snapshot_arn=""
while [[ $# -ge 2 ]] ; do
  case "${1#--}" in
    run-date)
      run_date="${2}"
      ;;
    snapshot-arn)
      snapshot_arn="${2}"
      ;;
    *)
      print_syntax
      ;;
  esac
  shift
  shift
done

today=$(date +'%Y-%m-%d')
uuid=$(uuid)

for step in "$@" ; do

  if [[ "${step}" == "Weekly" ]] ; then
    step="Segments,Microscalar,ResetBasicReads,BasicReads,ScaleUpMeterdata,ResetNEM12,GenerateNEM12,RestartMeterdata,InvoiceRuns,ScaleDown,Export"
  fi

  if [[ "${step}" == "Restore" ]] ; then
    input=$(jq -n --arg rdt "${run_date}" --arg stp "${step}" --arg arn "${snapshot_arn}" '{"steps": $stp, "run_date": $rdt, "snapshot_arn": $arn}')
  else
    input=$(jq -n --arg rdt "${run_date}" --arg stp "${step}" '{"steps": $stp, "run_date": $rdt}')
  fi

  aws --profile anstead --region ap-southeast-2 stepfunctions start-execution \
      --state-machine-arn arn:aws:states:ap-southeast-2:561082505378:stateMachine:tst-anstead-bua \
      --name "${today}-${step}-${uuid}" \
      --input "${input}"

done
